<section class="bv_pageWidth"
  id="faq-{{ section.id }}"
  class=""
  data-section="{{ section.id }}"
  style="background-color: #FFFFFF;">{%- comment -%}
    style sheet
    {%- endcomment -%}
  {{ 'bv_common_css.css' | asset_url | stylesheet_tag }}
  {%- comment -%}
  style sheet
  {%- endcomment -%}<aside aria-label="Accordion-collapsible" {{ block.shopify_attributes }}>
    <div
      class="faqContainer"
      id="faqSection-{{ section.id }}"
      data-section-id="{{ section.id }}"
      data-section-type="faq"
      data-enable-history-state="true"
      data-ajax-enabled="{{ settings.enable_ajax }}"
      {{ block.shopify_attributes }}>
      <div class="faqTextContainer one_half_column">
        <div class="faqText">
          <h2>{{ section.settings.bv_faqText_heading }}</h2>
          <p>{{ section.settings.bv_faqText_content }}</p>
        </div>
      </div>


      <div class="faqcollapsible one_half_column" style="background-color:;">
        {% for block in section.blocks %}
          <div class="product__accordion accordion quick-add-hidden">
            <details id="Details-collapsible-row-1-template--14624136757325__main">
              <summary onclick="bv_rotateIcon(this)"
                role="button"
                aria-expanded="false"
                aria-controls="ProductAccordion-collapsible-row-1-template--14624136757325__main">
                {%- comment -%}
                <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-caret" viewBox="0 0 10 6">
                <path fill-rule="evenodd" clip-rule="evenodd" d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z" fill="currentColor">
                </path>
                </svg>
                {%- endcomment -%}
                  <img
                  srcset="{{ block.settings.bv_collapsableIcon | image_url: width: block.settings.image_width }}, {{ block.settings.bv_collapsableIcon | image_url: width: image_size_2x }} 2x"
                  src="{{ block.settings.bv_collapsableIcon | image_url: width: 2400 }}"
                  alt="{{ block.settings.bv_collapsableIcon.alt | escape }}"
                  loading="lazy"
                  width="{{ block.settings.bv_collapsableIcon.width }}"
                  height="{{ block.settings.bv_collapsableIcon.height }}"
                  style="max-width: min(100%, {{ block.settings.image_width }}px);">

                <div class="summary__title">
                  <h2 class="h4 accordion__title">
                    {{ block.settings.bv_faqText_heading }}
                    Shipping &amp; Returns
                  </h2>
                </div>
              </summary>
              <div class="accordion__content rte" id="ProductAccordion-collapsible-row-1-template--14624136757325__main">
                <p>{{ block.settings.bv_faqText_heading }}</p>
              </div>
            </details>
          </div>
        {% endfor %}
      </div>
    </div>
  </aside>

</section>

<script>
  let v;
  const bv_rotateIcon = (s) => {
    const ariaExpanded = s.getAttribute('aria-expanded');
    if (ariaExpanded == "false") {
      s.firstChild.classList.add('rotate45');
      s.setAttribute("aria-expanded", true)
    } else {
      s.firstChild.classList.remove('rotate45');
      s.setAttribute("aria-expanded", false)
    };
  }
</script>



